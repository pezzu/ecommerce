{
  "name": "ecommerce",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^1.1.0",
    "axios": "^0.20.0",
    "connected-react-router": "^6.8.0",
    "express": "^4.17.1",
    "immutable": "^4.0.0-rc.12",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3",
    "tailwindcss": "^1.9.1"
  },
  "scripts": {
    "build:style": "tailwindcss build src/styles/index.css -o src/styles/tailwind.css",
    "build": "yarn run build:style && react-scripts build",
    "start": "node src/server/server.js",
    "client": "react-scripts start",
    "server": "nodemon --watch src/server src/server/server.js",
    "dev": "yarn run build:style && concurrently --kill-others-on-fail \"yarn:server\" \"yarn:client\"",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.5",
    "redux-devtools-extension": "^2.13.8"
  },
  "proxy": "http://localhost:8090"
}
